<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.myomer.myomer.activities.SplachScreenActivity">

    <TextView
        android:id="@+id/tvMyOmerTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="22dp"
        android:layout_marginTop="22dp"
        android:text="In Loving memory of Golda Mindel Grossman\nDedicated by her children, Karen and Yaakov Cohen"
        android:textColor="@android:color/white"
        android:textSize="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tvMyOmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="myOmer"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="50dp"
            />
        <TextView
            android:id="@+id/tvMyOmerSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A Spiritual Guidance App"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            />

    </LinearLayout>

</RelativeLayout>
